{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "lint": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "lint:fix": {},
    "test": {},
    "dev": { 
       "cache": true,
    "dependsOn": ["^build"],
    "persistent": true
    },
    "type-check": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "start": {}
  }
}